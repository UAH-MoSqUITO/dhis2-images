{
  "variables": {
    "aws_auth_access_key": "",
    "aws_auth_secret_key": "",
    "aws_image_region": "us-east-1"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_auth_access_key`}}",
      "secret_key": "{{user `aws_auth_secret_key`}}",
      "region": "{{user `aws_image_region`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu-minimal/images/*ubuntu-*-18.04-amd64-*",
          "root-device-type": "ebs"
        },
        "owners": [
          "099720109477"
        ],
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "dhis2-full {{timestamp}}",
      "tags": {
        "Base_AMI_Name": "{{ .SourceAMIName }}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "./playbook-full.yml",
      "extra_arguments": [
        "--skip-tags=skip",
        "--extra-vars",
        "ansible_python_interpreter=/usr/bin/python3"
      ]
    }
  ]
}